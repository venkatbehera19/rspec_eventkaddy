<h4>Listing organizations</h4>

<%= link_to 'New Organization', new_organization_path,class:"btn btn-primary" %> <br/><br/>

<table id="organizations" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
  <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Contact Name</th>
        <th>Contact Phone</th>
        <th>Contact Mobile</th>
        <th>Website</th>
        <th></th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.description %></td>
        <td><%= organization.contact_name %></td>
        <td><%= organization.contact_phone %></td>
        <td><%= organization.contact_mobile %></td>
        <td><%= organization.url_web %></td>
        <td><%= link_to 'Add Event', "/events/new/#{organization.id}", class:"btn btn-primary" %></td>
        <td class="table-actions">
          <div class="btn-group d-flex">
            <%= link_to 'Show', organization ,class:"btn btn-outline-info" %>
              <%= link_to 'Edit', edit_organization_path(organization) ,class:"btn btn-outline-warning" %>
              <%= link_to 'Delete', organization, data: {:confirm => 'Are you sure?'}, :method => :delete ,class:"btn btn-outline-danger" %>
          </div>
          <div class="dropdown">
            <a data-toggle="dropdown" class="ellipse-style">
              <i class="fa fa-ellipsis-v"></i>
            </a>
            <div class="dropdown-menu">
              <%= link_to 'Show', organization ,class:"btn fa fa-eye text-info dropdown-item" %>
              <%= link_to 'Edit', edit_organization_path(organization) ,class:"btn fa fa-pencil text-warning dropdown-item" %>
              <%= link_to 'Delete', organization, data: {:confirm => 'Are you sure?'}, :method => :delete ,class:"btn fa fa-trash text-danger dropdown-item" %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

