<% content_for :for_head do %>
  <meta http-equiv='cache-control' content='no-cache'>
<% end %>

<script src='/assets/unordered-files/sortandrename.js' type="text/javascript"> </script>

<h4>Tabs Configuration</h4><br> 
<%= link_to 'Edit Headers & Footers', tabs_path ,class:"btn edit" %>

<!-- <div id="response"></div> -->

<table id="tabstable" class="tabstable">
  <thead>
	<tr>
		<th> <h5>Enabled</h5></th>
		<th> <h5>Disabled</h5></th>
	</tr>
</thead>
  <tr>
    <td>
      <ul id="enabled" class="connectedSortable">
        <% @tabs.each do |tab| %>
          <% if tab.enabled then %>
        <li id="<%=tab.tab_type_id%>" class="ui-state-default"><input value="<%=tab.name%>"></input>Default: <%=tab.tab_type.default_name%></li>
          <% end %>
        <% end %>

      </ul>
    </td>
    <td>
      <ul id="disabled" class="connectedSortable">
        <% @tabs.each do |tab| %>
          <% if !(tab.enabled) then %>
        <li id="<%=tab.tab_type_id%>" class="ui-state-default"><input value="<%=tab.name%>"></input>Default: <%=tab.tab_type.default_name%></li>
          <% end %>
        <% end %>
      </ul>
    </td>
  </tr>
</table>
