<div id="editor_help_toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
  <div class="toast-header">
      <i class="mr-2 fa fa-info-circle"></i>
      <strong class="mr-auto">Editor Help</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
  </div>
  <div class="toast-body text-left">
      <h6 class="ml-2">Search And Replace</h6>
      <table class="table table-borderless">
          <tbody>
              <tr>
                  <th>Start Search</th><td> <code>CTRL-F / CMD-F</code> </td>
              </tr>
              <tr>
                  <th>Find Next</th><td> <code>CTRL-G / CMD-G</code> </td>
              </tr>
              <tr>
                  <th>Find Previous</th>
                  <td> <code>SHIFT-CTRL-G / SHIFT-CMD-G</code> </td>
              </tr>
              <tr>
                  <th>
                      Replace
                  </th>
                  <td>
                      <code>SHIFT-CTRL-F / CMD-OPTION-F</code>
                  </td>
              </tr>
              <tr>
                  <th>
                      Replace All
                  </th>
                  <td>
                      <code>SHIFT-CTRL-R / SHIFT-CMD-OPTION-F</code>
                  </td>
              </tr>
              <tr>
                  <th>Jump Line</th>
                  <td><code>ALT-G</code></td>
              </tr>
          </tbody>
      </table>
  </div>
</div>