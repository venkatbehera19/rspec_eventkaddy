<body>
  <div class="container-fluid">
    <% if notice %>
      <div class="alert alert-success shadow" role="alert" style="border-left:#155724 5px solid; border-radius: 0px;margin-top: 20px;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true" style="color:#155724">&times;</span>
        </button>
        <div class="row">
          <i class="fa fa-check-circle-o success-font"></i>
          <p style="font-size:17px" class="mb-0 font-weight-light"><%= notice %></p>
        </div>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-danger shadow mt-10" role="alert" style="border-left:#721C24 5px solid; border-radius: 0px; margin-top: 20px;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true" style="color:#721C24">&times;</span>
        </button>
        <div class="row">
          <i class="fa fa-exclamation-circle danger-font"></i>
          <p style="font-size:17px" class="mb-0 font-weight-light"><%= alert %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="container">
    <div id="user_defined_header">
      <%= @settings.member_information_page_header.to_s.html_safe %>
    </div>

    <%= form_for(@user, :html => {:class=>"form"}) do |f| %>  
      <div class='form-group attendee-profile-form-input'>
        <p><%= f.label :email, :class => "registered-attendee-form-label" %></p>
        <p><%= f.text_field :email, :readonly=>true, class: "form-control" %></p>
      </div>
  
      <div class='form-group attendee-profile-form-input'>
        <p><%= f.label :first_name, :class => "registered-attendee-form-label" %></p>
        <p><%= f.text_field :first_name, :readonly=>true, class: "form-control" %></p>
      </div>
      
      <div class='form-group attendee-profile-form-input'>
        <p><%= f.label :last_name, :class => "registered-attendee-form-label" %></p>
        <p><%= f.text_field :last_name, :readonly=>true, class: "form-control" %></p>
      </div>
    <% end %>
  </div>

</body>