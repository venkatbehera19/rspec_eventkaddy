<div class="row d-flex justify-content-center align-items-center h-100">
  <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
   <%= form_for :attendee, url: "/#{params[:event_id]}/program/login", :html => {id: "program_feed_login", autocomplete: 'off'}, remote: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control", required: true%>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :passw, class: "form-control", required: true%>
      </div>

      <div class="form-group">
      </div>

      <div class="d-flex">
        <%= f.submit "Login ", class:"btn btn-primary" %>
        <div class="not-found p-2"></div>
      </div>
    <% end %>
  </div>
</div>

<script>
  $(document).ready(function() {
    $('#program_feed_login').on('ajax:before', function(e, data, status, xhr){
      $('.not-found').html('<div class="spinner-border spinner-border-sm"></div>')
    })
    .on("ajax:success", function(e, data, status, xhr){
      window.location = window.location.origin + data.url
    }).on("ajax:error", function(e, data, status, xhr){
      $('.not-found').html('<b>Attendee Not Found</b>')
    })
  });
</script>