<%= link_to 'Back', '/dev', class:"btn btn-primary"%>
<%= link_to 'New Domain', new_domain_path, class:"btn btn-primary"%>



<h4>Domains</h4>
<br><br>
<table id="domains" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Event ID</th>
      <th>Domain Type</th>
      <th>Subdomain</th>
      <th>Domain</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @domains.each do |domain| %>
      <tr>
        <td><%= domain.event_id %> </td>
        <td><%= domain.domain_type.name %> </td>
        <td><%=domain.subdomain %></td>
        <td><%=domain.domain %></td>
        <td class="table-actions">
          <div class="dropdown">
            <a class="ellipse-style" data-toggle="dropdown">
              <i class="fa fa-ellipsis-v"></i>
            </a>
            <div class="dropdown-menu">
              <%= link_to 'Edit', edit_domain_path(domain) ,class:"btn dropdown-item text-success" %>
              <%= link_to 'Delete', domain, :confirm => 'Are you sure?', :method => :delete ,class:"btn dropdown-item text-danger" %>
            </div>
          </div>
          <div class="btn-group d-flex">
            <%= link_to 'Edit', edit_domain_path(domain) ,class:"btn btn-outline-success" %>
            <%= link_to 'Delete', domain, :confirm => 'Are you sure?', :method => :delete ,class:"btn btn-outline-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>