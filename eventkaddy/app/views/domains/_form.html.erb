<%= form_for(@domain, :html => { :multipart => true, :class=>"bg-light custom-border px-3 py-3" } ) do |f| %>
  
  <% if @domain.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@domain.errors.count, "error") %> prohibited this file from being saved:</h2>

      <ul>
        <% @domain.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= label_tag "Event"%>
      <%= f.collection_select(:event_id, Event.all, :id, :name, {}, class: "custom-select")%>
  </div>
  <div class="form-group">
      <%= label_tag "Domain Type"%>
      <%= f.collection_select(:domain_type_id, DomainType.order(:name), :id, :name, {}, class: "custom-select")%>
  </div>
  <div class="form-group">
      <%= label_tag "Subdomain"%>
      <%= f.text_field :subdomain, class: "form-control" %>
  </div>
  <div class="form-group">
      <%= label_tag "Domain"%>
      <%= f.text_field :domain, class: "form-control" %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "Submit", class:"btn btn-primary"   %>
  </div>
<% end %>