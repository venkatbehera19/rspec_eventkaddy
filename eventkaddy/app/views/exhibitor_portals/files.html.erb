<h4>Exhibitor Files</h4>
<%= link_to 'New File', '/exhibitor_portals/new_file',class:"btn btn-primary" %> <br/><br/>

<table id="pdf-index" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
  <thead>
		<tr>
    	 <th>Name</th>
    	 <th>Date Created</th>
    	 <th>Date Updated</th>
    	 <th></th>
  	</tr>
	</thead>
  <tbody>
    <% @files.each do |file| %>
      <tr>
        <td><%= file.name %></td>
        <td><%= file.created_at %></td>
        <td><%= file.updated_at %></td>
        <td class="table-actions">
          <div class="btn-group d-flex">
            <%= link_to 'Edit', "/exhibitor_portals/edit_file/#{file.id}" , class:"btn btn-outline-success" %>
						<%= link_to 'Delete', "/exhibitor_portals/delete_pdf/#{file.id}", :confirm => 'Are you sure?', :method => :delete, class:"btn btn-outline-danger" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>