<%= form_for(@speaker_payment_detail, :html => { :multipart => true, :class => "form-horizontal well" }, :url => {:action => "update_payment_detail"}   ) do |f| %>

  <div class="actions">
    <%= f.submit "Update" ,class:"btn btn-primary" %>
  </div>
  <hr/>

  <% if @speaker_payment_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@speaker_payment_detail.errors.count, "error") %> prohibited this speaker from being saved:</h2>

      <ul>
      <% @speaker_payment_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :speaker_id, :value => @speaker.id %>
  </div>


	<h4>Registration, Travel & Housing</h4>

	  <div class="form-group">
	    <%= f.label :vip_code %>
	    <%= f.text_field :vip_code, class: "form-control" %>
	  </div>
	  <div class="form-group">
	    <%= f.label "Eligible For Direct-Billed Travel" %>
	    <%= f.text_field :direct_bill_travel, class: "form-control" %>
	  </div>
	  <div class="form-group">
	    <%= f.label "Eligible For Direct-Billed Housing" %>
	    <%= f.text_field :direct_bill_housing, class: "form-control" %>
	  </div>
	  <div class="form-group">
	    <%= f.label "Eligible Housing Nights" %>
	    <%= f.text_field :eligible_housing_nights, class: "form-control" %>
	  </div>
	
	<br/>
	
	<h4>Payment Details</h4>

	  <div class="form-group">
	    <%= f.label :payment_type %>
	    <%= f.text_field :payment_type, class: "form-control" %>
	  </div>
	  <div class="form-group">
	    <%= f.label :eligible_payment_rate %>
	    <%= f.text_field :eligible_payment_rate, class: "form-control" %>
	  </div>
	  <div class="form-group">
	    <%= f.label :total_honorarium %>
	    <%= f.text_field :total_honorarium, class: "form-control" %>
	  </div>
	  <div class="form-group">
	    <%= f.label :total_per_diem %>
	    <%= f.text_field :total_per_diem, class: "form-control" %>
	  </div>


  <div class="actions">
    <%= f.submit "Update" ,class:"btn btn-primary" %>
  </div>
  
<% end %>
