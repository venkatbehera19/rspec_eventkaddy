<div class='well'>
    <h2>Scavenger Hunts</h2>

    <%= link_to "Add Scavenger Hunt", @m[:new_scavenger_hunt_url], class: "btn btn-primary" %>

    <br>
    <br>

    <table id="scavenger_hunts" cellpadding="0" cellspacing="0" border="0" class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Items Count</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% if @m[:scavenger_hunts].blank? %>
                <tr><td style="text-align:center" colspan="6">There are no scavenger hunts for this event yet.</td></tr>
            <% end %>

            <% @m[:scavenger_hunts].each do |hunt| %>
                <tr>
                    <td><%= hunt[:title] %></td>
                    <td><%= hunt[:description] %></td>
                    <td><%= hunt[:items_count] %></td>
                    <td class="table-actions">
                        <div class="btn-group d-flex">
                            <%= link_to 'View Items', hunt[:items_url], class:"btn btn-outline-info" %>
                            <%= link_to 'Edit', hunt[:edit_url], class:"btn btn-outline-success" %>
                            <%= link_to 'Delete', hunt[:delete_url], :confirm => 'Are you sure?', :method => :delete ,class:"btn btn-outline-danger" %>
                        </div>
                        <div class="dropdown">
                            <a data-toggle="dropdown" class="ellipse-style">
                                <i class="fa fa-ellipsis-v"></i>
                            </a>
                            <div class="dropdown-menu">
                                <%= link_to 'View Items', hunt[:items_url], class:"btn text-info dropdown-item" %>
                                <%= link_to 'Edit', hunt[:edit_url], class:"btn text-success dropdown-item" %>
                                <%= link_to 'Delete', hunt[:delete_url], :confirm => 'Are you sure?', :method => :delete ,class:"btn text-danger dropdown-item" %>
                            </div>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
