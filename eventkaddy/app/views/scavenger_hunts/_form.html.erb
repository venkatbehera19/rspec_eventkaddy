<%= form_for(@m[:scavenger_hunt], :html => { :class => "form-horizontal" }) do |f| %>

    <% if @m[:scavenger_hunt].errors.any? %>

        <div id="error_explanation">

            <h2>
                <%= pluralize(@m[:scavenger_hunt].errors.count, "error") %> prohibited this attendee from being saved:
            </h2>

            <ul>
                <% @m[:scavenger_hunt].errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control", rows: 3 %>
    </div>

    <div class="form-group">
        <%= f.label :maximum_attempts, "Default Maximum Retries" %>
        <%= f.number_field :maximum_attempts, class: "form-control"%>
    </div>

    <br>

    <div class="actions">
        <%= f.submit "Update Scavenger Hunt", class: "btn btn-primary" %>
    </div>
<% end %>
