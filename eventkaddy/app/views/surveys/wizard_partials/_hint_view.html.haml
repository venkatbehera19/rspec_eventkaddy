.wizard-view.hint-view{data:{hash:'#hint', order:'', question_id:'', hint_id:''}}

    .top-panel.btn-toolbar
        .btn-group
            .save_button.btn.btn-success{data:{'model' => 'hint', 'hash' => '#hint'},style:'border-right:1px solid black;'}>
                Save & Add Next Hint

        .btn-group.wizard-bar-btn-group{style:'margin-left:0px;border-right:1px solid black;'}>
            %button.btn.btn-success.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}>
                Save & . . .
            .dropdown-menu.wizard-special-actions
                %a.save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#answer'}}
                    = '. . . Add Answers'
                %a.save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#question'}}
                    = '. . . Add Another Question'

                - unless current_user.role? :exhibitor
                    %a.save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#survey_section'}}
                        = '. . . Add Another Survey Section'

                .dropdown-divider{:role => "separator"}

                %a.save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#index'}}
                    = '. . . Go to Surveys Index'
                - unless current_user.role? :exhibitor
                    %a.save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#sessionassoc'}}
                        = '. . . Go to Create Session Associations Page'
                    %a.save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#exhibitorassoc'}}
                        = '. . . Go to Create Exhibitor Associations Page'
                    - if @survey.survey_type_id == 1
                        %a.save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#certificateassoc'}}
                            = '. . . Go to CE Certificate Associations Page'

        .btn-group.wizard-bar-btn-group{style:'margin-left:0px;'}
            %button.btn.btn-primary.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                Don't Save & . . .
            .dropdown-menu.wizard-special-actions
                %a.dont_save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#answer'}}
                    = '. . . Add Answers'
                %a.dont_save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#question'}}
                    = '. . . Add Another Question'
                - unless current_user.role? :exhibitor
                    %a.dont_save_button.dropdown-item{data:{'model' => 'hint', 'hash' => '#survey_section'}}
                        = '. . . Add Another Survey Section'
                .dropdown-divider{:role => "separator"}
                    %a.dropdown-item{:href => "/surveys"}
                        = '. . . Return to Index Without Saving'

        .ml-auto.wizard-bar-btn-group
            .wizard-removal.btn.btn-danger{data:{'model' => 'hint'}}
                X Remove This Hint

    .wizard-form.survey_form

        .field
            .wizard-extra-details

        .form-group
            %label#hint-label.wizard-label{for: "hint_hint"} Hint
            %input#hint_hint.wizard-input.form-control
