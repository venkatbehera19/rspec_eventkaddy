<%= form_tag("/surveys/copy_surveys_form",:class=>"bg-light custom-border px-3 py-3", method: "post") do |f| %>


  <div class="field text-info">
      Copy Surveys, survey sections, questions, answers and hints from previous events or the present event.
  </div>

  <div class="form-group">
    <%= label_tag(:surveys, "Select Surveys to Copy") %>
    <%= select_tag(
        :survey_ids,
        options_for_select(
            @surveys.map { |s| ["( #{s.event_name} ) #{s.title}", s.id] },
            [] # no previous selections ever
        ), :multiple => true, :size=>30, class: "custom-select"
    ) %>
  </div>
    <br>
   <div class="actions"><%= submit_tag "Copy Surveys", class:"btn btn-primary" %></div>
<% end %>

