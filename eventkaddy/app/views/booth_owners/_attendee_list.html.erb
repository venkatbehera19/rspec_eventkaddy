<div class="card" id="<%= type %>">
  <div class="card-body">
    <h5 class="card-title"><%= type.titleize %></h5>
    <input type="text" class="form-control search-booth-attendee" placeholder="Search Attendee" id="search-<%= type %>" autocomplete="off">
  </div>
  <ul class="list-group list-group-flush all-attendees-<%=type%> mt-3" style="height: 25rem;overflow-y: scroll;">
    <% attendees.each do |attendee| %>
      <li class="list-group-item justify-content-between attendee-info-<%= type %>" style="display: flex;">
        <p><%= "#{attendee.full_name.to_s} - #{attendee.company.to_s}, Business Unit: #{attendee.business_unit}" %></p>
        <% if type == 'booth_owners' %>
          <button class="remove-booth-owner btn btn-outline-primary btn-sm" data-id="<%= attendee.id%>"> Remove </button>
        <% else %>
          <button class="add-to-booth-owner btn btn-outline-primary btn-sm" data-id="<%= attendee.id%>"> Add </button>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>




