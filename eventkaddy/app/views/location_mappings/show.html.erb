<h4 class="view-title">Location Details</h4>

<%= link_to 'Edit', edit_location_mapping_path(@location_mapping) ,class:"btn btn-outline-success" %><br><br>

<table class="table">
<tr><th>Location Name</th><td><%= @location_mapping.name %></td></tr>
<tr><th>Location Type</th><td><%= @location_mapping.location_mapping_type_name %></td></tr>
<tr><th>Map X Coord</th><td><%= @location_mapping.x %></td></tr>
<tr><th>Map Y Coord</th> <td><%= @location_mapping.y %></td></tr>
</table>

<% if @event_map!=nil %>
	<h4 class="view-subtitle">Map</h4>

	<% if (@event_map.event_file!=nil && @location_mapping.y!=nil && @location_mapping.x!=nil) then %>
		<div id="map-marker" style="top:<%= @location_mapping.y + 10%>px;left:<%= @location_mapping.x %>px"></div>
		<div id="map-image"><%= image_tag(@event_map.event_file.path, style: 'width: 100%; height: auto;') %></div>
	<% end %>

	<table class="table table-striped table-bordered">
	  <tr>
	    <th>Map Name</th>
			<th>Type</th>
	    <th></th>
	  </tr>
	  <tr>
	    <td><%= @event_map.name %></td>
	    <td><%= @event_map.map_type.map_type unless @event_map.map_type.blank? %></td>
	    <td class="table-actions">
				<div class="btn-group d-flex">
					<%= link_to 'Show', @event_map ,class:"btn btn-outline-info" %>
					<%= link_to 'Edit', edit_event_map_path(@event_map) ,class:"btn btn-outline-success" %>
					<%= link_to 'Delete', @event_map, data: {:confirm => 'Are you sure?'}, :method => :delete ,class:"btn btn-outline-danger" %>
				</div>
				<div class="dropdown">
					<a data-toggle="dropdown" class="ellipse-style">
						<i class="fa fa-ellipsis-v"></i>
					</a>
					<div class="dropdown-menu">
						<%= link_to 'Show', @event_map ,class:"btn dropdown-item text-info" %>
						<%= link_to 'Edit', edit_event_map_path(@event_map) ,class:"btn dropdown-item text-success" %>
						<%= link_to 'Delete', @event_map, data: {:confirm => 'Are you sure?'}, :method => :delete ,class:"btn dropdown-item text-danger" %>
					</div>
				</div>
			</td>
	  </tr>
	</table>
<% end %>
