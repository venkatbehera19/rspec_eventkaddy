<div class='bg-light py-2 pb-3 px-3 custom-border'>
    <h3>Create AV Request Item</h3>
    <input id='new_av_list_item', class="form-control">
    <br><br>
    <div id='submit_av_list_item' class='btn btn-primary'>Create New AV List Item</div>
</div>

<%= form_for(@av_list_items, :html => {:method => :post, :class => "bg-light custom-border px-3 py-3" }, :url => {:action => "update_select"} ) do |f| %>
    <h3>Select AV Request Items For Speaker Portal</h3>

    <div class="field">
        <%= label_tag(:av_list_items, "") %>
        <%= select_tag(
            :av_list_item_ids,
            options_for_select(@av_list_items.map { |a| [a.name, a.id] }, @events_av_list_item_ids),
            :multiple => true,
            :size     => 30,
            class: "custom-select"
        ) %>
    </div>

    <br>
    <br>
    <div class="actions">
        <%= f.submit "Submit", class:"btn btn-primary" %>
    </div>
<% end %>
