<% if @speaker.unsubscribed==true %>
    <p>You are currently unsubscribed from recieving the below messages at your email address. To resubscribe, click <%= link_to "here", "/messages/subscribe/#{@speaker.token}" %>.</p>
  <% else %>
    <%= link_to "here", "/messages/unsubscribe/#{@speaker.token}" %>
<% end %>

<h4>Messages</h4>
<div class="table-responsive">
<table id="messages" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Title</th>
    <!-- <th>Date</th> -->
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @messages.each do |message| %>
  <tr>
    <td><%= message.title %></td>
    <!-- <td><%#= Time.parse("#{message.active_time.strftime('%Y-%m-%d %H:%M:%S')}Z").localtime(@event.utc_offset).strftime('%Y-%m-%d %H:%M') %></td> -->
    <td><%= link_to 'View', "/messages/display_message/#{message.id}" ,class:"btn btn-outline-info" %></td>
  </tr>
<% end %>
	</tbody>
</table>
</div>

<br />