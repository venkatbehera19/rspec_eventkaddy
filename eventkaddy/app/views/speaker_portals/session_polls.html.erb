<h3> Session Polls </h3>

<table id="spsessions" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Session Code</th>
			<th>Title</th>
			<th>Date/Time</th>
			<th>Actions</th>
		</tr>	
	</thead>

	<tbody>
		<% @sessions.each do |session| %>

	 	<tr>
			<td><%= session.session_code %></td>
			<td><%= session.title %></td>
			<% if (session.date!=nil && session.start_at!=nil && session.end_at!=nil) then %>
				<td><i><%= session.date.strftime('%m-%d-%Y') %></i><br><%= session.start_at.strftime('%l:%M%p') %> - <%= session.end_at.strftime('%l:%M%p') %></td>
			<% else %>
				<td>Not Assigned Yet</td>
			<% end %>

    		<td class="table-actions">
				<div class="btn-group d-flex">
					<%= link_to 'Check Session Polls', "/speaker_portals/session_polls_list/#{session.id}", class:"btn btn-outline-success"%>
				</div>

				<div class="dropdown">
					<a class="ellipse-style" data-toggle="dropdown">
						<i class="fa fa-ellipsis-v"></i>
					</a>
					<div class="dropdown-menu">
					<%= link_to 'Check Session Polls', "/speaker_portals/session_polls_list/#{session.id}", class:"btn dropdown-item text-success"%>
					</div>
				</div>
			</td>

		</tr>
		<% end %>
	</tbody>
</table>