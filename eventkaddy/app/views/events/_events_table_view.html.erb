<div class="table-responsive">
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Event start at</th>
    <th>Event end at</th>
    <th>Exhibitors</th>
    <th>Enhanced listings</th>
    <th>Sponsorship</th>
    <th></th>
  </tr>

<% events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.description %></td>
    <td><%= event.event_start_at %></td>
    <td><%= event.event_end_at %></td>
    <td><%= event.exhibitors %></td>
    <td><%= event.enhanced_listings %></td>
    <td><%= event.sponsorship %></td>
    <td class="table-actions">
      <div class="btn-group d-flex">
      <%= link_to "show", event, class:"btn btn-outline-info"%>
        <%= link_to 'Edit', edit_event_path(event) ,class:"btn btn-outline-warning" %>
        <%= link_to 'Delete', event, :confirm => 'Are you sure?', :method => :delete ,class:"btn btn-outline-danger" %>
      </div>
      <div class="dropdown dropleft">
        <a class="ellipse-style" data-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></a>
        <div class="dropdown-menu">
          <%= link_to "show", event, class:"btn text-info dropdown-item fa fa-eye"%>
          <%= link_to 'Edit', edit_event_path(event) ,class:"btn text-warning fa fa-pencil dropdown-item" %>
          <%= link_to 'Delete', event, :confirm => 'Are you sure?', :method => :delete ,class:"btn text-danger fa fa-trash dropdown-item" %>
        </div>
      </div>
    </td>
  </tr>
<% end %>
</table>
</div>