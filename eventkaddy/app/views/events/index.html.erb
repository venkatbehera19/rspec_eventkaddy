<h4>Listing events</h4>

<div class="row mb-3">
  <div class="form-check col-lg-4">
    <label for="events-toggle-sort" class="form-check-label">Older events first:</label>
    <label class="switch">
      <input type="checkbox" id="events-toggle-sort" />
      <span class="slider round"></span>
    </label>
  </div>
  <div class="d-flex col-lg-6 input-group">
    <div class="input-group-prepend">
      <span class="input-group-text" style="height: 2.4rem;"><i class="fa fa-search"></i></span>
    </div>
    <input type="text" class="form-control" placeholder="Search here" id="event-search-txt">
  </div>
  <div class="col-lg-2 ml-auto mt-1">
    <button type="button" class="btn btn-light mr-2 event-view-type" id="grid_view"><i class="fa fa-th"></i></button>
    <button type="button" class="btn btn-light event-view-type" id="table_view"><i class="fa fa-list"></i></button>
  </div>
</div>

<div id="events_container">
  <%= render 'events_grid_view', events: @events %>
</div>

<br />


