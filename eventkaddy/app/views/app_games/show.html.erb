<div class='bg-light custom-border px-3 py-3'>
    <h2><%= @m[:name] %> (<%= @m[:status] %>)</h2>

    <%= link_to "Edit", @m[:edit_url], class: "pull-right btn btn-outline-success" %>

    <br>

    <%= link_to "Export Game Data To Spreadsheet", "/app_games/#{ @m[:id] }/export_xlsx.xlsx", class: "export" %>

    <br>
    <br>

    <%= @m[:description] %>

    <br>
    <br>
    <br>

    <h3>Badges</h3>
    <%= link_to "Add Badge to Game", @m[:new_badge_url], class: "btn btn-primary" %>

    <br>
    <br>

    <table id="app_badges" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="d-none d-md-table-cell">Position</th>
                <th>Image</th>
                <th>Name</th>
                <th>Task Count</th>
                <th></th> <!-- Actions -->
            </tr>
        </thead>

        <tbody>
            <% if @m[:badges].blank? %>
                <tr><td style="text-align:center" colspan="6">There are no badges for this game yet.</td></tr>
            <% end %>

            <% @m[:badges].each do |badge| %>
                <tr>
                    <td class="d-none d-md-table-cell"><%= badge[:position] %></td>
                    <td><%= image_tag badge[:image] %></td>
                    <td><%= badge[:name] %></td>
                    <td><%= badge[:task_count] %></td>
                    <td class="table-actions">
                        <div class="btn-group d-flex">
                            <%= link_to 'View Tasks', badge[:tasks_url], class:"btn btn-outline-info" %>
                            <%= link_to 'Edit', badge[:edit_url], class:"btn btn-outline-success" %>
                            <%= link_to 'Delete', badge[:delete_url], :confirm => 'Are you sure?', :method => :delete ,class:"btn btn-outline-danger" %>
                        </div>
                        <div class="dropdown dropleft">
                            <a data-toggle='dropdown' class="ellipse-style"> <i class="fa fa-ellipsis-v"></i></a>
                            <div class="dropdown-menu">
                                <%= link_to 'View Tasks', badge[:tasks_url], class:"btn dropdown-item text-info" %>
                                <%= link_to 'Edit', badge[:edit_url], class:"btn dropdown-item text-success" %>
                                <%= link_to 'Delete', badge[:delete_url], :confirm => 'Are you sure?', :method => :delete ,class:"btn dropdown-item text-danger" %>
                            </div>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
