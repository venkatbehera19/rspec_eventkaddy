<h3>View History</h3>
<%= link_to 'Back', "/attendees/#{params[:id]}" ,class:"btn btn-link" %>
<br />
<br />
<ul class="nav nav-tabs history-tabs">
  <li class="nav-item">
    <a id="my_ce_sessions_btn" class="nav-link active" onclick="changeTab(event,'my_ce_sessions')">My CE Sessions</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" onclick="changeTab(event,'my_favorited_exhibitors')">My Favorited Exhibitors</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" onclick="changeTab(event,'page_view_exhibitors')">Page Views Exhibitors</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" onclick="changeTab(event,'page_view_sessions')">Page Views Sessions</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" onclick="changeTab(event,'video_views')">Video Videos</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" onclick="changeTab(event,'platform_logins')">Platform Logins</a>
  </li>
</ul>
<br />
<br />
<br />
<div id="my_ce_sessions" class="tabcontent">
  <%= render 'attendees/history/my_ce_sessions' %>
</div>
<div id="my_favorited_exhibitors" class="tabcontent"> 
  <%= render 'attendees/history/my_favorited_exhibitors' %>
</div>
<div id="page_view_exhibitors" class="tabcontent">
  <%= render 'attendees/history/page_view_exhibitors' %>
</div>
<div id="page_view_sessions" class="tabcontent">
  <%= render 'attendees/history/page_view_sessions' %>
</div>
<div id="video_views" class="tabcontent">
  <%= render 'attendees/history/video_views' %>
</div>
<div id="platform_logins" class="tabcontent">
  <%= render 'attendees/history/platform_logins' %>
</div>
<style>
  .tab button:hover {
  background-color: #ddd;
}

  /* Create an active/current tablink class */
  .tab button.active {
    background-color: #ccc;
    color: #2fa4e7;
    font-weight: bolder;
  }

</style>

<script>
  var current_tab = $('#my_ce_sessions_btn')
  current_tab.click()
  function changeTab(evt, tabName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    /* tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    } */
    $('.active').removeClass('active');
    document.getElementById(tabName).style.display = "block";
    $(evt.target).addClass('active');
    //evt.target.className += " active";
  }
</script>